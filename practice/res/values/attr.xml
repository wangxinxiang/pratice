<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FirstView">
        <attr name="Text" format="string|reference"/>
        <attr name="Oriental">
            <enum name="Horizontal" value="1"/>
            <enum name="Vertical" value="0"/>
        </attr>
        <attr name="Src" format="reference|integer"/>
    </declare-styleable>
    
    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension"/>
        <attr name="border_outsize_color" format="color"/>
        <attr name="border_inside_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ToggleSwitch">
        <attr name="backgroundId" format="reference"/>
        <attr name="buttonId" format="reference"/>
        <attr name="currentState" format="boolean"/>
    </declare-styleable>
</resources>