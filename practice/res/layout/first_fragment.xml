<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="fragmentDialog"
            android:id="@+id/fragmentDialog"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="fragmentDialog2"
            android:id="@+id/fragmentDialog2"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/home"
            android:text="拨打电话"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/web"
            android:text="百度"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/vibrator"
            android:text="震动下"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/popup_window"
            android:text="下拉框"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/surface"
            android:text="画布"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/test"
            android:text="测试"/>

    <com.example.practice.view.Tab1ListViewForScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/listview"
            android:layout_gravity="center_horizontal"/>
</LinearLayout>